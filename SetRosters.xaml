<Page
    x:Class="BaseballGameCreator.SetRosters"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaseballGameCreator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Wrap content so the page is usable on small screens -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="55" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="15,15,0,0" Grid.ColumnSpan="4">
                <TextBlock Text="Set lineups for both teams:" FontSize="30"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                <TextBlock Text="Away Team Name:" FontSize="14" HorizontalAlignment="Center"/>
                <TextBox x:Name="ATName" Width="200" Height="35" />
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                <TextBlock Text="Home Team Name:" FontSize="14" HorizontalAlignment="Center"/>
                <TextBox x:Name="HTName" Width="200" Height="35"/>
            </StackPanel>

            <!-- LINEUPS: use a grid with explicit rows so labels align with textboxes -->
            <Grid Grid.Row="2" Grid.ColumnSpan="4" Margin="8,4,8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Header row -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header labels -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="LINEUP:" Margin="4,0" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="LINEUP:" Margin="4,0" FontWeight="SemiBold"/>

                <!-- Number column (left) and Away batters -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="1" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="ATBatter1" Margin="4,2" MinWidth="160"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="2" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="ATBatter2" Margin="4,2"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="3" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="ATBatter3" Margin="4,2"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="4" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="ATBatter4" Margin="4,2"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="5" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="ATBatter5" Margin="4,2"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="6" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="ATBatter6" Margin="4,2"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="7" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="ATBatter7" Margin="4,2"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="8" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="ATBatter8" Margin="4,2"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="9" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="ATBatter9" Margin="4,2"/>

                <!-- Number column (right) and Home batters -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="1" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="HTBatter1" Margin="4,2" MinWidth="160"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="2" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="3" x:Name="HTBatter2" Margin="4,2"/>

                <TextBlock Grid.Row="3" Grid.Column="2" Text="3" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="3" x:Name="HTBatter3" Margin="4,2"/>

                <TextBlock Grid.Row="4" Grid.Column="2" Text="4" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="3" x:Name="HTBatter4" Margin="4,2"/>

                <TextBlock Grid.Row="5" Grid.Column="2" Text="5" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="3" x:Name="HTBatter5" Margin="4,2"/>

                <TextBlock Grid.Row="6" Grid.Column="2" Text="6" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="3" x:Name="HTBatter6" Margin="4,2"/>

                <TextBlock Grid.Row="7" Grid.Column="2" Text="7" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="3" x:Name="HTBatter7" Margin="4,2"/>

                <TextBlock Grid.Row="8" Grid.Column="2" Text="8" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="3" x:Name="HTBatter8" Margin="4,2"/>

                <TextBlock Grid.Row="9" Grid.Column="2" Text="9" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="3" x:Name="HTBatter9" Margin="4,2"/>
            </Grid>

            <!-- ROTATION / BULLPEN / BENCH: same alignment strategy -->
            <Grid Grid.Row="3" Grid.ColumnSpan="4" Margin="8,4,8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Headers -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="ROTATION, BULLPEN, and BENCH:" FontSize="12" Margin="4,0" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="ROTATION, BULLPEN, and BENCH:" FontSize="12" Margin="4,0" FontWeight="SemiBold"/>

                <!-- Left pos labels and away pitchers/bench -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="SP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="ATSPitcher" Margin="4,2"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="RP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="ATRPitcher1" Margin="4,2"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="RP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="ATRPitcher2" Margin="4,2"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="RP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="ATRPitcher3" Margin="4,2"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="SU" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="ATSetupMan" Margin="4,2"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="CL" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="ATCloser" Margin="4,2"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="BE" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="ATBench1" Margin="4,2"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="BE" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="ATBench2" Margin="4,2"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="BE" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="ATBench3" Margin="4,2"/>

                <!-- Right pos labels and home pitchers/bench -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="SP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="HTSPitcher" Margin="4,2"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="RP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="3" x:Name="HTRPitcher1" Margin="4,2"/>

                <TextBlock Grid.Row="3" Grid.Column="2" Text="RP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="3" x:Name="HTRPitcher2" Margin="4,2"/>

                <TextBlock Grid.Row="4" Grid.Column="2" Text="RP" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="3" x:Name="HTRPitcher3" Margin="4,2"/>

                <TextBlock Grid.Row="5" Grid.Column="2" Text="SU" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="3" x:Name="HTSetupMan" Margin="4,2"/>

                <TextBlock Grid.Row="6" Grid.Column="2" Text="CL" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="3" x:Name="HTCloser" Margin="4,2"/>

                <TextBlock Grid.Row="7" Grid.Column="2" Text="BE" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="3" x:Name="HTBench1" Margin="4,2"/>

                <TextBlock Grid.Row="8" Grid.Column="2" Text="BE" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="3" x:Name="HTBench2" Margin="4,2"/>

                <TextBlock Grid.Row="9" Grid.Column="2" Text="BE" FontSize="16" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="3" x:Name="HTBench3" Margin="4,2"/>
            </Grid>

            <!-- Fixed bottom button: correct column span and centered -->
            <Button Click="nextScreen_Click"
                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4"
                    Width="400" FontSize="18" Content="BEGIN THE GAME!"
                    HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="2" Margin="0,4"/>
        </Grid>
    </ScrollViewer>
</Page>
